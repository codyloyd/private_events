<div class="col-md-6 col-md-offset-3">
  <h1>Create Event</h1>
  <%= form_for @event do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <%= f.label :location %>
    <%= f.text_field :location %>
    <%= f.label :date, "Date - dd/mm/yyyy"%>
    <%= f.date_field :date %>
    <%= f.submit :class => "btn btn-primary"%>
  <% end %>
</div>
